{
	"compilerOptions": {
		"outDir": "./build/",
		"target": "es6",
		"moduleResolution": "node",
		"module": "es6",
		"noImplicitAny": false,
		"removeComments": true,
		"sourceMap": true,
		"jsx": "react",
        "jsxFactory": "h",
        "experimentalDecorators": true,
	},
	"suppressImplicitAnyIndexErrors": true,
	"lib": [
		"dom",
		"es2017"
	],
	"baseUrl": ".",
	"exclude": [
		"build"
	]
}
